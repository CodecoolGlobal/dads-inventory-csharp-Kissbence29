@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<head>
    <title>Login</title>
</head>
<body>
<div>
    <form asp-action="Login" method="post">
        <div>
            <label>
                Username
            </label>
            <input type="text" name="username" id="username" />
        </div>
        <div>
            <label>
                Password
            </label>
            <input type="password" name="password" id="password"/>
        </div>
        <button type="submit">Login</button>
    </form>
</div>
</body>
